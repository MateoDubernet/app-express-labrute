<%- include('header') %>

<div id="items-list">
    <div class="home-title-container">
        <h1>Items</h1>
    </div>
    <div class="home-item-container">
        <div id="armes">
            <h3 class="item-title">Armes</h3>
            <div class="item-grid">
                <% for(let i=0; i < armes.length; i++ ) {%>
                    <div class="item">
                        <img src="<%= armes[i].image %>" alt="item-image">
                        <%= armes[i].nom %>
                    </div>
                <% }%>
            </div>
        </div>
        <div id="boucliers">
            <h3 class="item-title">Boucliers</h3>
            <div class="item-grid">
                <% for(let i=0; i < boucliers.length; i++ ) {%>
                    <div class="item">
                        <img src="<%= boucliers[i].image %>" alt="item-image">
                        <%= boucliers[i].nom %>
                    </div>
                <% }%>
            </div>
        </div>
        <div id="tenues">
            <h3 class="item-title">Tenues</h3>
            <div class="item-grid">
                <% for(let i=0; i < tenues.length; i++ ) {%>
                    <div class="item">
                        <img src="<%= tenues[i].image %>" alt="item-image">
                        <%= tenues[i].nom %>
                    </div>
                <% }%>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>
