<div id="userRobotData">
    <div class="title-container">
        <h1>Robot Datas</h1>
    </div>
    <div class="home-robot-container">
        <h3>Robot: <%= connectedUserRobot.pseudo %></h3> 
        <li>Force: <%= connectedUserRobot.puissance %></li>
        <li>Esquive: <%= connectedUserRobot.esquive %></li>
        <li>Defense: <%= connectedUserRobot.defense %></li>
        <li>Pv: <%= connectedUserRobot.pv %></li>
        <li>Niveau: <%= connectedUserRobot.niveau %></li>
        <li>Experience: <%= connectedUserRobot.experience %></li>
        <li>Argent: <%= connectedUserRobot.argent %> $</li>
        <div id="equip-objet">
            <div class="robot-items">
                <h5>Arme</h5>
                <% for(let i=0; i < armes.length; i++ ) {%>
                    <% if(connectedUserRobot.arme_id === armes[i].id) {%>
                        <img class="robot-items-img" src="<%= armes[i].image %>">
                    <% }%>
                <% }%>
            </div>
            <div class="robot-items">
                <h5>Bouclier</h5>
                <% for(let i=0; i < boucliers.length; i++ ) {%>
                    <% if(connectedUserRobot.bouclier_id === boucliers[i].id) {%>
                        <img class="robot-items-img" src="<%= boucliers[i].image %>">
                    <% }%>
                <% }%>
            </div>
            <div class="robot-items">
                <h5>Tenue</h5>
                <% for(let i=0; i < tenues.length; i++ ) {%>
                    <% if(connectedUserRobot.tenue_id === tenues[i].id) {%>
                        <img  class="robot-items-img"src="<%= tenues[i].image %>">
                    <% }%>
                <% }%>
            </div>
        </div>
    </div>
</div>

<div id="items">
    <div class="title-container">
        <h1>Items</h1>
    </div>
    <div class="item-container">
        <div id="armes">
            <h3 class="item-title">Armes</h3>
            <div class="item-grid">
                <% for(let i=0; i < armes.length; i++ ) {%>
                    <% if(armes[i].robot_id === connectedUserRobot.id) {%>
                        <div class="item">
                            <img src="<%= armes[i].image %>" alt="item-image">
                            <%= armes[i].nom %>
                            <% if(connectedUserRobot.arme_id !== armes[i].id) {%>
                                <form action="/equip?armeId=<%= armes[i].id %>" method="post">
                                    <button type="submit" class="add-arme">Utiliser</button>
                                </form>
                            <% } else { %>
                                <form action="/equip?armeId=<%= armes[i].id %>" method="post">
                                    <button type="submit" class="retire-arme">Retirer</button>
                                </form>
                            <% } %>
                        </div>
                    <% } %>   
                <% }%>
            </div>
        </div>
        <div id="boucliers">
            <h3 class="item-title">Boucliers</h3>
            <div class="item-grid">
                <% for(let i=0; i < boucliers.length; i++ ) {%>
                    <% if(boucliers[i].robot_id === connectedUserRobot.id) {%>
                        <div class="item">
                            <img src="<%= boucliers[i].image %>" alt="item-image">
                            <%= boucliers[i].nom %>
                            <% if(connectedUserRobot.bouclier_id !== boucliers[i].id) {%>
                                <form action="/equip?bouclierId=<%= boucliers[i].id %>" method="post">
                                    <button type="submit" class="add-bouclier">Utiliser</button>
                                </form>
                            <% } else { %>
                                <form action="/equip?bouclierId=<%= boucliers[i].id %>" method="post">
                                    <button type="submit" class="retire-bouclier">Retirer</button>
                                </form>
                            <% } %>
                        </div>
                    <% } %>
                <% }%>
            </div>
        </div>
        <div id="tenues">
            <h3 class="item-title">Tenues</h3>
            <div class="item-grid">
                <% for(let i=0; i < tenues.length; i++ ) {%>
                    <% if(tenues[i].robot_id === connectedUserRobot.id) {%>
                        <div class="item">
                            <img src="<%= tenues[i].image %>" alt="item-image">
                            <%= tenues[i].nom %>
                            <% if(connectedUserRobot.tenue_id !== tenues[i].id) {%>
                                <form action="/equip?tenueId=<%= tenues[i].id %>" method="post">
                                    <button type="submit" class="add-tenue">Utiliser</button>
                                </form>
                            <% } else { %>
                                <form action="/equip?tenueId=<%= tenues[i].id %>" method="post">
                                    <button type="submit" class="retire-tenue">Retirer</button>
                                </form>
                            <% } %>
                        </div>
                    <% } %>
                <% }%>
            </div>
        </div>
    </div>
</div>